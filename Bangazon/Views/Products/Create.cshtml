@model Bangazon.Models.ProductViewModels.ProductCreateViewModel

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<h4>Product</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="product.Description" class="control-label"></label>
                <input asp-for="product.Description" class="form-control" />
                <span asp-validation-for="product.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="product.Title" class="control-label"></label>
                <input asp-for="product.Title" class="form-control" />
                <span asp-validation-for="product.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="product.Price" class="control-label"></label>
                <input asp-for="product.Price" class="form-control" />
                <span asp-validation-for="product.Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="product.Quantity" class="control-label"></label>
                <input asp-for="product.Quantity" class="form-control" />
                <span asp-validation-for="product.Quantity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="product.UserId" class="control-label"></label>
                <select asp-for="product.UserId" class ="form-control" asp-items="ViewBag.UserId"></select>
            </div>
            <div class="form-group">
                <label asp-for="product.City" class="control-label"></label>
                <input asp-for="product.City" class="form-control" />
                <span asp-validation-for="product.City" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="product.ImagePath" class="control-label"></label>
                <input asp-for="product.ImagePath" class="form-control" />
                <span asp-validation-for="product.ImagePath" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="product.ProductTypeId" class="control-label"></label>
                <select asp-for="product.ProductTypeId" class="form-control" asp-items="@Model.productTypes"></select>
                <span asp-validation-for="product.ProductTypeId" class="text-danger"></span>

            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
