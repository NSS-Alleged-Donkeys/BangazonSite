@model Bangazon.Models.Order

@{
    ViewData["Title"] = "Details";
}

<h2>Details</h2>

<div>
    <h4>Order</h4>
    <hr />
    <dl class="dl-horizontal">
        @foreach (var item in Model.OrderProducts)
        {
        <dt>
            <a asp-action="Details" asp-controller="Products" asp-route-id="@item.Product.ProductId">@item.Product.Title</a>
        </dt>
        }
    </dl>
</div>
<div>
    <a asp-action="Details" asp-route-id="@Model.OrderId">Details</a> |
    <a asp-action="Edit" asp-route-id="@Model.OrderId">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
